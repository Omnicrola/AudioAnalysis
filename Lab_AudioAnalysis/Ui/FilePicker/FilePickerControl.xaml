<UserControl x:Class="Lab_AudioAnalysis.Ui.FilePicker.FilePickerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Lab_AudioAnalysis.Ui.FilePicker"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:FilePickerControl}"
             d:DesignHeight="50" d:DesignWidth="300">
    <Grid x:Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <TextBox Text="{Binding SelectedFilename}" Grid.Column="0" Margin="4"/>
        <Button Click="Browse_OnClick" Grid.Column="1" Margin="4">Browse</Button>
    </Grid>
</UserControl>